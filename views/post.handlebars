{{!-- SINGLE POST PAGE --}}
{{!-- this is the page that is rendered when clicking on a single post --}}
{{!-- this data-id is the post id, this is how to parse the post_id to the HTML --}}
<div class="text-center singlePost" data-id={{id}}>
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>Created by: {{user.name}} on {{format_date date_created}}</p>
  <p>
    <span class="">{{body}}</span>
  </p>
  <p>User comments: {{comments.user_id}} on {{format_date date_created}}</p>
  <p>
    <span class="">{{commentBody}}</span>
  </p>
  <p>
    <textarea id="commentBody"></textarea>
    <button class="btn btn-primary comment-btn">Comment</button>
    <button class="btn btn-sm btn-danger" data-id="{{post.id}}">Delete</button>
    <button class="btn btn-sm editButton" data-id="{{post.id}}">Edit</button>
  </p>
</div>

<script src="../js/comment.js"></script>
