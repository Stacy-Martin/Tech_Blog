{{!-- SINGLE POST PAGE --}}
{{!-- this is the page that is rendered when clicking on a single post --}}
{{!-- this data-id is the post id, this is how to parse the post_id to the HTML --}}
<div class="text-center singlePost" data-id={{id}}>
  <h2>Post title:  {{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>Created by: {{user.name}} on {{format_date date_created}}</p>
    <span class="">{{body}}</span>
  <p>
    <br>
    <button class="btn btn-sm btn-danger deleteBtn" data-id="{{post.id}}">Delete</button>
    <button class="btn btn-sm editBtn" data-id="{{post.id}}">Edit</button>
    <br>
</div>

{{!-- TODO: Fix comment body to not show post body data--}}
<div class="text-center postComments" data-id={{id}}>
  <h4>Comments:</h4>
  <p>{{id}} Created by: {{user.name}} on {{format_date date_created}}</p>
    <span class="">{{comment.body}}</span>
  <p>
    <br>
    <textarea id="commentBody"></textarea>
    <br>
    <button class="btn btn-sm commentBtn">Comment</button>
</div>


